Algoritmo "questao1"

Var
   numero : real

Inicio
   escreva("Digite um número aleátorio: ")
   leia(numero)
   se numero < 0 entao
      escreva("Este número é negativo!")
   senao
      se numero = 0 entao
         escreva("0 é nulo!")
      senao
         escreva("Este número é positivo!")
      fimse
   fimse
Fimalgoritmo